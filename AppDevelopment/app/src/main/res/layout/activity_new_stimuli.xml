<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewStimuli"
    android:background="@drawable/background"
    >


    <Button
        android:id="@+id/playStimuli2"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="136dp"
        android:layout_marginBottom="207dp"
        android:background="@drawable/mybutton"
        android:onClick="playVideo"
        android:text="Play Loaded Video" />

    <Button
        android:id="@+id/film_video_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="150dp"
        android:layout_marginBottom="642dp"
        android:onClick="filmVideo"
        android:text="Film New Video" />

    <Button
        android:id="@+id/load_video_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="569dp"
        android:onClick="loadVideo"
        android:text="Load Video From Device" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="562dp"
        android:text="Video Name" />

    <EditText
        android:id="@+id/et_video_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="146dp"
        android:layout_marginTop="553dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="video_1" />

    <Button
        android:id="@+id/next_analyze_button"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/film_video_button"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-41dp"
        android:layout_marginBottom="50dp"
        android:onClick="FinishAdding"
        android:text="Next" />

    <VideoView
        android:id="@+id/vv_new_stimuli"
        android:layout_width="374dp"
        android:layout_height="261dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="195dp"
        android:layout_marginEnd="23dp" />

</RelativeLayout>