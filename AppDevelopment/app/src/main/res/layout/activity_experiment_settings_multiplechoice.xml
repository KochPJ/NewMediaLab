<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ExperimentSettingsMultipleChoice"
    android:padding="5pt">


    <Spinner
        android:id="@+id/ExpSettingMultiCho_kine_spinner"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ExpSettingMultiCho_imviewkine"
        android:layout_alignStart="@+id/ExpSettingMultiCho_imviewkine"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/tv_title_mc4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_centerHorizontal="true"
        android:text="Multiple Choice Test Parameters"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/ExpSettingMultiCho_add_kine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ExpSettingMultiCho_kine_spinner"
        android:layout_alignStart="@+id/ExpSettingMultiCho_kine_spinner"

        android:layout_marginStart="20dp"

        android:layout_marginTop="20dp"
        android:background="@drawable/mybutton"
        android:onClick="addFalseSymbolsKinestetic"
        android:text="Add" />


    <Button
        android:id="@+id/ExpSettingMultiCho_delete_kine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ExpSettingMultiCho_kine_spinner"
        android:layout_alignEnd="@+id/ExpSettingMultiCho_imviewkine"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/mybutton"
        android:onClick="deleteFalseSymbolsKinestetic"
        android:text="Delete" />

    <TextView
        android:id="@+id/tw_experiment_select_symbols_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title_mc4"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-medium"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Add false stimuli images for the muliple choice test."
        android:textColor="#000000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/ExpSettingMultiCho_save"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/mybutton"
        android:onClick="saveExperiment2"
        android:text="Save" />

    <Button
        android:id="@+id/ExpSettingMultiCho_cancel"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/mybutton"
        android:onClick="cancel"
        android:text="Cancel" />

    <ImageView
        android:id="@+id/ExpSettingMultiCho_imviewkine"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_below="@+id/tw_experiment_select_symbols_title"
        android:layout_marginTop="20dp"
        app:srcCompat="@android:drawable/btn_dialog" />

</RelativeLayout>