<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MultipleChoiceExperiment"
    android:background="@drawable/background"
    android:padding="5pt"
    >

    <EditText
        android:id="@+id/te_number_of_questions"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="20dp"
        android:digits="0123456789"

        android:layout_centerHorizontal="true"
        android:ems="10"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:text="4"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/task_description_message2"
        android:layout_width="650dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="text"
        android:text="Choose the symbol you have seen before" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/te_number_of_questions"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Set Task Description" />

    <Button
        android:id="@+id/MultiChoiceExp_next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/mybutton"
        android:onClick="continueToSettings2"
        android:text="Next" />


    <Button
        android:id="@+id/MultiChoiceExp_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/mybutton"
        android:onClick="cancel"
        android:text="Cancel" />


    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task_description_message2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="End of Experiment Message" />

    <EditText
        android:id="@+id/participation_message2"
        android:layout_width="650dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="text"

        android:text="Thanks for participating!" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title_mc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Number of options per question (Min. 2, Max. 6):" />

    <TextView
        android:id="@+id/tv_title_mc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:text="Multiple Choice Test Parameters"
        android:textSize="20sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/noneCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:checked="true"
        android:text='"None of the Above"-option'
        android:textSize="14sp" />

</RelativeLayout>