<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExperimentFunction"
    android:background="@drawable/background"
    >


    <TextView
        android:id="@+id/tw_experiment_function_title"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-medium"
        android:text="Velocity function:"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"/>

    <EditText
        android:id="@+id/te_experiment_function"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="94dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tw_experiment_function_title3"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Velocity function:"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph_view"
        android:layout_width="500dp"
        android:layout_height="150dp"
        android:layout_below="@+id/te_experiment_function"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="31dp" />


    <Button
        android:id="@+id/create_exp_button"
        android:layout_width="200dp"
        android:layout_height="50dp"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/mybutton"
        android:onClick="next"
        android:text="Save" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/build_function"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        android:background="@drawable/mybutton"
        android:layout_centerHorizontal="true"
        android:onClick="build_function"
        android:text="Build function"
        />


    <TextView
        android:id="@+id/speed_multiplier_textbox"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="364dp"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="54dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Video speed multiplier:"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/speed_multiplier_slider"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="303dp"
        android:max="100"
        android:progress="50" />

    <Spinner
        android:id="@+id/default_functions_spinner"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="54dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>