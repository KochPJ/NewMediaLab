<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExperimentFunction"
    android:background="@drawable/background"
    >


    <TextView
        android:id="@+id/tw_experiment_function_title"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-medium"
        android:text="Velocity function:"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"/>

    <EditText
        android:id="@+id/te_experiment_function"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="exp(x)+2"
        android:gravity="center"
        android:textStyle="italic"/>

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph_view"
        android:layout_width="500dp"
        android:layout_height="150dp"
        android:layout_below="@+id/te_experiment_function"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />


    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/create_exp_button"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/mybutton"
        android:layout_centerHorizontal="true"
        android:onClick="next"
        android:text="next"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/build_function"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        android:background="@drawable/mybutton"
        android:layout_centerHorizontal="true"
        android:onClick="build_function"
        android:text="Build function"
        />
</RelativeLayout>