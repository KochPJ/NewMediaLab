<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyExperiments"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/textView_spinner_title"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Created Experiments:"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/experiment_names_spinner"
        android:layout_width="299dp"
        android:layout_height="54dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView_myExperiment_title"
        android:layout_width="399dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="282dp"
        android:layout_marginTop="230dp"
        android:layout_marginEnd="281dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Experiment Parameters:"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_myExperiment"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="284dp"
        android:layout_marginTop="271dp"
        android:layout_marginEnd="278dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center|top"
        android:text="Empty experiment"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/button3"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="375dp"
        android:layout_marginTop="121dp"
        android:layout_marginEnd="369dp"
        android:text="Select Experiment"
        android:textSize="18sp"
        android:onClick="selectExperiment"/>

</RelativeLayout>