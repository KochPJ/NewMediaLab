<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyExperiments"
    android:background="@drawable/background">

    <TextView
    android:id="@+id/textView_spinner_title"
    android:layout_width="300dp"
    android:layout_height="30dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    android:fontFamily="sans-serif-medium"
    android:text="Select Experiment:"
    android:textColor="#000000"
    android:textSize="20dp"
    android:textStyle="bold"
    android:gravity="center"/>

    <Spinner
        android:id="@+id/experiment_names_spinner"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView_myExperiment_title"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:fontFamily="sans-serif-medium"
        android:text="Experiment Parameters:"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textView_myExperiment"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:fontFamily="sans-serif-medium"
        android:text="Empty experiment"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="italic"
        android:gravity="center|top"/>

    <Button
        android:id="@+id/edit_function"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="34dp"
        android:layout_marginRight="34dp"
        android:layout_marginBottom="91dp"
        android:background="@drawable/mybutton"
        android:onClick="navigation"
        android:text="Edit Function" />

    <Button
        android:id="@+id/start_experiment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="34dp"
        android:layout_marginRight="34dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/mybutton"
        android:onClick="startExperiment"
        android:text="Start Experiment" />

    <Button
        android:id="@+id/edit_stimuli"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        android:layout_marginBottom="156dp"
        android:background="@drawable/mybutton"
        android:onClick="navigation"
        android:text="Edit Stimuli" />

    <Button
        android:id="@+id/edit_experiment"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="39dp"
        android:layout_marginRight="39dp"
        android:layout_marginBottom="223dp"
        android:background="@drawable/mybutton"
        android:onClick="navigation"
        android:text="Edit Experiment" />

    <Button
        android:id="@+id/view_stimuli"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="221dp"
        android:layout_marginRight="221dp"
        android:layout_marginBottom="302dp"
        android:background="@drawable/mybutton"
        android:onClick="navigation"
        android:text="View Existing Stimuli" />

    <Button
        android:id="@+id/add_stimuli"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="222dp"
        android:layout_marginRight="222dp"
        android:layout_marginBottom="246dp"
        android:background="@drawable/mybutton"
        android:onClick="addNewStimuli"
        android:text="Add New Stimuli" />

    <Button
        android:id="@+id/results"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="91dp"
        android:background="@drawable/mybutton"
        android:onClick="navigation"
        android:text="Export Results" />

    <Button
        android:id="@+id/delete_experiment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="42dp"
        android:layout_marginLeft="42dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/mybutton"
        android:onClick="navigation"
        android:text="Delete Experiment" />

</RelativeLayout>