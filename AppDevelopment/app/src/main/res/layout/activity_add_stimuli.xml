<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddStimuli"
    android:background="@drawable/background"
    >

    <Button
        android:id="@+id/getVelocityProfile"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="131dp"
        android:layout_marginRight="131dp"
        android:layout_marginBottom="162dp"
        android:background="@drawable/mybutton"
        android:onClick="getVelocityProfile"
        android:text="get Velocity" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph_view_new_stimuli"
        android:layout_width="347dp"
        android:layout_height="169dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="240dp" />

    <Button
        android:id="@+id/loadStimuli"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="131dp"
        android:layout_marginRight="131dp"
        android:layout_marginBottom="98dp"
        android:background="@drawable/mybutton"
        android:onClick="loadStimuli"
        android:text="Load Stimuli" />

    <Button
        android:id="@+id/captureVideoButton"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="127dp"
        android:layout_marginRight="127dp"
        android:layout_marginBottom="34dp"
        android:background="@drawable/mybutton"
        android:onClick="captureVideo"
        android:text="Capture Video" />

    <VideoView
        android:id="@+id/videoViewNewStimuli"
        android:layout_width="264dp"
        android:layout_height="212dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="11dp" />

</RelativeLayout>